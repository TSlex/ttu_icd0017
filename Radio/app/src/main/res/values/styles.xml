<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/anisonYellow</item>
        <item name="colorPrimaryDark">@color/anisonBlack</item>
        <item name="colorAccent">@color/anisonPurple</item>
    </style>

    <style name="PlayButton">
        <item name="android:background"> @drawable/play_button_shape</item>
        <item name="android:layout_height">@dimen/playButtonSize</item>
        <item name="android:layout_width">@dimen/playButtonSize</item>
        <item name="android:textSize">30sp</item>
    </style>
    
    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_height">@dimen/progressBarSize</item>
        <item name="android:layout_width">@dimen/progressBarSize</item>
    </style>

    <style name="StationImageView">
        <item name="android:src">@drawable/logo_h</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>

    </style>
    <style name="Text">
        <item name="android:textColor">@color/anisonBlack</item>
        <item name="android:shadowColor">@color/anisonBlack</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="Text.AnimeTitle">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="Text.SongTitle">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
