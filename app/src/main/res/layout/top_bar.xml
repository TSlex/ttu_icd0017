<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/statistics"
    android:layout_width="match_parent"
    android:layout_height="@dimen/barSize"
    android:orientation="horizontal"
    tools:showIn="@layout/game_gui"
    style="@style/GameBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        style="@style/TopBarTextHolder">

        <TextView
            android:id="@+id/bombsCount"
            style="@style/TopBarCounterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/restartBtn"
        style="@style/BarButton.TopBarButton"
        android:contentDescription="restart" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        style="@style/TopBarTextHolder">

        <TextView
            android:id="@+id/timeCount"
            style="@style/TopBarCounterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00" />

    </LinearLayout>
</LinearLayout>